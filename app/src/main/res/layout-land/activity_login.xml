<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorBackground"
  tools:context="org.wit.autofile.views.login.LoginView"
  tools:layout_editor_absoluteY="25dp">

  <ImageView
    android:id="@+id/loginImage"
    android:layout_width="310dp"
    android:layout_height="92dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:adjustViewBounds="false"
    app:layout_constraintBottom_toTopOf="@+id/et_email"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/login"
    tools:padding="20,20,20,20" />


  <EditText
    android:id="@+id/et_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="150dp"
    android:layout_marginEnd="150dp"
    android:layout_marginBottom="8dp"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:textAlignment="center"
    android:textColor="@color/colorLoginText"
    android:textColorHint="@color/colorPrimary"
    app:layout_constraintBottom_toTopOf="@+id/et_password"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <EditText
    android:id="@+id/et_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="150dp"
    android:layout_marginEnd="150dp"
    android:layout_marginBottom="104dp"
    android:hint="Password"
    android:inputType="textPassword"
    android:textAlignment="center"
    android:textColor="@color/colorLoginText"
    android:textColorHint="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="@+id/btn_google_login"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />


  <Button
    android:id="@+id/btn_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="#5C4F70FA"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:text="Register"
    android:textAllCaps="false"
    android:textColor="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/btn_google_login"
    app:layout_constraintHorizontal_bias="0.956"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.97" />

  <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_width="27dp"
    android:layout_height="43dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:layout_weight="1"
    app:layout_constraintBottom_toBottomOf="@+id/btn_google_login"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_password"
    app:layout_constraintVertical_bias="0.0" />

  <Button
    android:id="@+id/btn_submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="#5C4F70FA"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:text="Submit"
    android:textAllCaps="false"
    android:textColor="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.048"
    app:layout_constraintStart_toEndOf="@+id/btn_google_login"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.97" />


  <Button
    android:id="@+id/btn_google_login"
    android:layout_width="99dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="#75E6F1FF"
    android:drawableRight="@drawable/googleg_standard_color_18"
    android:gravity="center"
    android:paddingTop="0dp"
    android:paddingRight="38dp"
    android:paddingBottom="0dp"
    android:textAllCaps="true"
    android:textColor="@color/colorPrimary"
    android:textSize="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>